.header
  .headers
    .headers__up.flex
      .headers__up__image 
        = image_tag 'mercari.png' ,class:'mercari'
      .headers__up__search
        何かお探しですか？
        .headers__up__search__btn
          .headers__up__search__btn__icon
            = fa_icon 'search'
    .headers__bottom
      .headers__bottom__left.flex
        .headers__bottom__left__category
          .headers__bottom__left__category__icon
            = fa_icon 'list' ,class: 'header_left_icon'
          .headers__bottom__left__category__text
            カテゴリーから探す
        .headers__bottom__left__brand
          .headers__bottom__left__brand__icon
            = fa_icon 'tags', class: 'header_left_icon'
          .headers__bottom__left__brand__text
            ブランドから探す
      .headers__bottom__right.flex
        .headers__bottom__right__like.flex
          .headers__bottom__right__like__icon
            = fa_icon 'heart' ,class: 'header_right_icon'
          .headers__bottom__right__like__text
            =link_to'いいね！一覧'
        .headers__bottom__right__info.flex
          .headers__bottom__right__info__icon
            = fa_icon 'bell' ,class: 'header_right_icon'
          .headers__bottom__right__info__text
            =link_to'お知らせ'
        .headers__bottom__right__list.flex
          .headers__bottom__right__list__icon
            = fa_icon 'check', class: 'header_right_icon'
          .headers__bottom__right__list__text
            =link_to 'やることリスト'
        .headers__bottom__right__mypage.flex
          .headers__bottom__right__mypage__image
            =image_tag 'user_icon.png',class:'user_icon'
          .headers__bottom__right__mypage__text
            =link_to 'マイページ'